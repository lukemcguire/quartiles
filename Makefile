.PHONY: install
install: ## Install the virtual environment and install the pre-commit hooks
	@echo "ğŸš€ Creating virtual environment using uv"
	@uv sync
	@if git rev-parse --git-dir > /dev/null 2>&1; then \
		echo "ğŸš€ Installing pre-commit hooks"; \
		uv run pre-commit install; \
	else \
		echo "âš ï¸  Not a git repository - skipping pre-commit hooks"; \
		echo "   Run 'git init' first, then 'make install'"; \
	fi
	@echo "âœ… Setup complete! Run 'make help' to see available commands."

.PHONY: check
check: ## Run code quality tools.
	@echo "ğŸš€ Checking lock file consistency with 'pyproject.toml'"
	@uv lock --locked
	@echo "ğŸš€ Linting code: Running pre-commit"
	@uv run pre-commit run -a
	@echo "ğŸš€ Static type checking: Running ty"
	@uv run ty check
	@echo "ğŸš€ Checking for obsolete dependencies: Running deptry"
	@uv run deptry .

.PHONY: test
test: ## Test the code with pytest
	@echo "ğŸš€ Testing code: Running pytest"
	@uv run python -m pytest --cov --cov-config=pyproject.toml --cov-report=xml

.PHONY: build
build: clean-build ## Build wheel file
	@echo "ğŸš€ Creating wheel file"
	@uvx --from build pyproject-build --installer uv

.PHONY: clean-build
clean-build: ## Clean build artifacts
	@echo "ğŸš€ Removing build artifacts"
	@uv run python -c "import shutil; import os; shutil.rmtree('dist') if os.path.exists('dist') else None"

.PHONY: help
help:
	@uv run python -c "import re; \
	[[print(f'\033[36m{m[0]:<20}\033[0m {m[1]}') for m in re.findall(r'^([a-zA-Z_-]+):.*?## (.*)$$', open(makefile).read(), re.M)] for makefile in ('$(MAKEFILE_LIST)').strip().split()]"

.DEFAULT_GOAL := help
